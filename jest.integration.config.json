{
  "preset": "ts-jest/presets/default-esm",
  "globals": {
    "ts-jest": {
      "useESM": true,
      "isolatedModules": true
    }
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "testRegex": ".*\\.test\\.ts$",
  "rootDir": ".",
  "testTimeout": 30000,
  "testEnvironment": "node"
}
